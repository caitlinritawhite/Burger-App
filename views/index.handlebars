<div class="jumbotron">
 <h2>Add or devour a burger!</h2>
   
</div>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

 <div class="add-burger-section mt-4">
    <form class="create-form">
      <div class="form-group">
        <div class="input-group mb-3">
          <input type="text" id="br" name="burger_name" class="form-control" placeholder="Burger Name"
            aria-label="Burger Name" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="add-burger-btn" type="submit" id="button-addon2">Order Burger</button>
          </div>
        </div>
      </div>
    </form>
  </div>    
  </div>