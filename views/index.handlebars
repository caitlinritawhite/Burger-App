<h1>Burgers!</h1>

 <h2 class="list-title">Not devoured:</h2>
      <ul class="list-content" id="not-d-list">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>

<h2 class="list-title ">Devoured:</h2>
      <ul class="list-content" id="d-list">
        {{#each burgers}}
          {{#if devoured}}
             {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
